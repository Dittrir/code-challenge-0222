<% if current_user.nil? %>
  <%= link_to "Log In", "/login", method: :get %>
  <%= link_to "Register", "/register", method: :get %>
<% else %>
  <%= link_to "Logout", "/logout", method: :delete %>
  <h1> <%= @post.title %></h1>
  <p> <%= @post.body %> </p>
    <%= link_to "Comment", "/posts/#{@post.id}/comments/new", params: {user_id: session[:user_id]} %>
<% end %>
