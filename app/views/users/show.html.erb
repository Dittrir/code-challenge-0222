<% if current_user.nil? %>
  <%= link_to "Log In", "/login", method: :get %>
  <%= link_to "Register", "/register", method: :get %>
<% else %>
  <%= link_to "Logout", "/logout", method: :delete %>

  <h1> <%= @user.name %>'s Dashboard</h1>

  <p><%= @user.name %>'s Posts: </p>
  <% @user.posts.each do |post| %>
    <ul>
    <p><%= post.title %></p>
    <p><%= post.body %></p>
    <p><%= post.created_at %></p>
    <p><%= post.updated_at %></p>
  <% end %>
<% end %>
